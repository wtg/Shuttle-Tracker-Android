<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/MenuThemes">

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/colorblindSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Colorblind Mode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settingsToolbar" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/logsSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Automatically Upload Logs"
        app:layout_constraintStart_toStartOf="@id/colorblindSwitch"
        app:layout_constraintTop_toBottomOf="@id/colorblindSwitch" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/autoBoardSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Enable Automatic Board Bus"
        app:layout_constraintStart_toStartOf="@id/logsSwitch"
        app:layout_constraintTop_toBottomOf="@id/logsSwitch" />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/discreteSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="10"
        android:theme="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_margin="32dp"
        android:stepSize="10.0"
        android:text="Minimum Stop Distance"
        android:valueFrom="0.0"
        android:valueTo="100.0"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/autoBoardSwitch"
        app:layout_constraintTop_toBottomOf="@id/autoBoardSwitch" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/settingsToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="Settings"
        app:titleTextColor="#FFFFFF"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/autoBoardSwitch"
        tools:layout_editor_absoluteX="0dp">

        <EditText
            android:id="@+id/editServerURL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/saveURLButton"
            android:ems="12"
            android:inputType="text"
            android:text="https://shuttletracker.app" />

        <Button
            android:id="@+id/saveURLButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Apply" />

        <Button
            android:id="@+id/resetURLButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editServerURL"
            android:text="RESET SERVER URL" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>